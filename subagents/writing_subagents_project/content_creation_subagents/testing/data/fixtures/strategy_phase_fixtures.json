{
  "content-planner": [
    {
      "test_name": "weekly_editorial_calendar",
      "input": {
        "topics": [
          "AI automation tools",
          "Python web scraping",
          "React best practices",
          "DevOps pipelines"
        ],
        "timeline": "next 7 days"
      },
      "expected_output": {
        "editorial_calendar": [
          {"day": 1, "topic": "AI automation tools", "type": "blog"},
          {"day": 3, "topic": "Python web scraping", "type": "tutorial"},
          {"day": 5, "topic": "React best practices", "type": "guide"},
          {"day": 7, "topic": "DevOps pipelines", "type": "technical"}
        ],
        "priorities": [
          "AI automation tools (high traffic potential)",
          "Python web scraping (tutorial demand)",
          "React best practices (evergreen content)"
        ]
      }
    },
    {
      "test_name": "monthly_content_strategy",
      "input": {
        "topics": [
          "Machine learning basics",
          "Cloud architecture",
          "Security best practices"
        ],
        "timeline": "next 30 days"
      },
      "expected_output": {
        "editorial_calendar": [
          {"week": 1, "topics": ["Machine learning basics"], "formats": ["series"]},
          {"week": 2, "topics": ["Cloud architecture"], "formats": ["guide", "video"]},
          {"week": 3, "topics": ["Security best practices"], "formats": ["checklist"]},
          {"week": 4, "topics": ["Review and roundup"], "formats": ["compilation"]}
        ],
        "priorities": [
          "Machine learning series",
          "Cloud architecture guide",
          "Security checklist"
        ]
      }
    },
    {
      "test_name": "minimal_planning",
      "input": {
        "topics": ["Quick news update"],
        "timeline": "today"
      },
      "expected_output": {
        "editorial_calendar": [
          {"day": 0, "topic": "Quick news update", "type": "news"}
        ],
        "priorities": ["Immediate publication"]
      }
    }
  ],
  "angle-definer": [
    {
      "test_name": "technical_angle_definition",
      "input": {
        "topic": "Kubernetes deployment",
        "research": {
          "competitors": "Many basic tutorials exist",
          "gaps": "Production-ready examples lacking",
          "audience": "Senior developers"
        }
      },
      "expected_output": {
        "unique_angle": "Production-grade Kubernetes with real-world edge cases",
        "perspective": "Battle-tested engineer sharing war stories",
        "differentiation": "Focus on what goes wrong and how to fix it"
      }
    },
    {
      "test_name": "beginner_friendly_angle",
      "input": {
        "topic": "Git basics",
        "research": {
          "competitors": "Complex technical documentation",
          "gaps": "Visual learners underserved",
          "audience": "New developers"
        }
      },
      "expected_output": {
        "unique_angle": "Git explained through visual metaphors",
        "perspective": "Patient mentor guiding first-timers",
        "differentiation": "No command line for first 3 lessons"
      }
    },
    {
      "test_name": "controversial_angle",
      "input": {
        "topic": "Microservices vs Monoliths",
        "research": {
          "competitors": "Pro-microservices content dominates",
          "gaps": "Balanced perspective missing",
          "audience": "Architects and CTOs"
        }
      },
      "expected_output": {
        "unique_angle": "Why we moved back to a monolith and saved $1M",
        "perspective": "CTO who's been on both sides",
        "differentiation": "Real cost and complexity analysis"
      }
    }
  ],
